{% extends 'base.html.twig' %}

{% block title %}Ajout d'une note{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/recipe-form.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/recipe.js') }}"></script>
{% endblock %}


{% block body %}
    <div class="block">
        <div class="arrow-backProfil" title="Retour Ã  la page profil">
            <a href="{{ path('app_recipe_show', {id : recipe.id}) }}"><i class="fa-light fa-circle-arrow-left"></i></a>
        </div>
        <div class="recipe__addNote">
            <h1 class="recipe__addNote-title">Votre note sur la recette {{ recipe.nomRecette }}</h1>
            {{ form_start(form) }}
                {{ form_row(form.note, {'label': 'Votre note (/5)'})}}
                {{ form_row(form.submit, {'label': 'Valider', 'attr': {'class': 'btn btn-success w-100 p-3  '}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
